    ]
  },
  "devDependencies": {
    "@hono/mcp": "^0.2.3",
    "@hono/node-server": "^1.19.9",
    "@inquirer/prompts": "^8.2.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "@types/node": "^25.3.0",
    "esbuild": "^0.27.3",
    "hono": "^4.12.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "zod": "^4.3.6"
  }
