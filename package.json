{
  "name": "discord-webhook-mcp",
  "version": "1.0.3",
  "description": "MCP server for sending Discord Webhook notifications from AI coding agents",
  "type": "module",
  "bin": {
    "discord-webhook-mcp": "./dist/index.cjs"
  },
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsx scripts/build.ts",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "discord",
    "webhook",
    "ai",
    "claude",
    "codex"
